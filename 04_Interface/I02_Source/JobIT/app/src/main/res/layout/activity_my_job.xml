<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".View.MyJob.MyJobActivity">

    <TextView
        android:id="@+id/btnMyJob"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:text="CÔNG VIỆC CỦA TÔI" />

    <LinearLayout
        android:id="@+id/llMyjobBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/btnHistoryJob"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Tìm kiếm gần đây" />

        <Button
            android:id="@+id/btnSavedJob"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Đã lưu" />

        <Button
            android:id="@+id/btnAppliedJob"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Đã apply" />

        <Button
            android:id="@+id/btnInterviewJob"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Chờ phỏng vấn" />
        <Button
            android:id="@+id/btnMoiLam"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Mời làm" />
    </LinearLayout>
</LinearLayout>