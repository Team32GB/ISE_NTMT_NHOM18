<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryMinLight"
    tools:context=".View.HomeRecruitmentActivity.HomeRecruitmentActivity">

   <ImageView
       android:id="@+id/imgIt"
       android:layout_width="match_parent"
       android:layout_height="160dp"
       android:layout_marginStart="16dp"
       android:layout_marginEnd="16dp"
       android:layout_marginTop="8dp"
       android:scaleType="centerCrop"
       android:src="@drawable/it"/>

    <LinearLayout
        android:layout_below="@+id/imgIt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUploadPost"
            style="@style/StyleButtonList1"
            android:layout_width="match_parent"
            android:text="Đăng tin tuyển dụng mới"
            app:icon="@drawable/ic_add" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPost"
            android:layout_width="match_parent"
            android:text="Danh sách các tin tuyển dụng"
            style="@style/StyleButtonList1"
            app:icon="@drawable/ic_list"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFileOfRecruit"
            android:layout_width="match_parent"
            style="@style/StyleButtonList1"
            android:text="Hồ sơ của nhà tuyển dụng"
            app:icon="@drawable/ic_resume"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProfileAccount"
            android:layout_width="match_parent"
            android:text="Thông tin tài khoản"
            app:icon="@drawable/ic_user"

            style="@style/StyleButtonList1"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChangeUserTypeRecruiter"
            android:layout_width="match_parent"
            style="@style/StyleButtonList1"
            app:icon="@drawable/ic_change"

            android:text="Chuyển đổi chức năng"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignOutRecruit"
            android:layout_width="match_parent"
            style="@style/StyleButtonList1"
            app:icon="@drawable/ic_log_out"
            android:text="Đăng xuất"
            android:textAllCaps="false" />
    </LinearLayout>

</RelativeLayout>