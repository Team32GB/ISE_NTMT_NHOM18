<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.SelectUserType.SelectUserTypeActivity"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imgJobit"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/jobit_text_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgJobit"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="BẠN LÀ ?"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJobSeeker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/StyleButton"

            android:text="Người tìm việc" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEmployer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/StyleButton"
            android:text="Nhà tuyển dụng" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/StyleButton"
            android:text="Admin" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="BỎ QUA"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            app:strokeWidth="0.5dp"
            app:cornerRadius="4dp"
            app:strokeColor="@color/colorBlackLight"
            app:rippleColor="@android:color/white"
            android:background="@android:color/transparent"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/tvNameCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="© Team32Gb"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        android:textSize="15sp" />

</RelativeLayout>