<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpAccountBusiness">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Đăng kí thông tin "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtNameCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên công ty"
            android:textSize="20sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilNameCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtNameCompany"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Tên công ty" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/txtSizeCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quy mô công ty" />

        <Spinner
            android:id="@+id/spSize"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:spinnerMode="dropdown">

        </Spinner>

        <TextView
            android:id="@+id/txtTypeCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại hình công ty"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spType"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:spinnerMode="dropdown">

        </Spinner>

        <TextView
            android:id="@+id/txtAddressCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ công ty"
            android:textSize="20sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilAddressCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtAddressCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập địa chỉ công ty" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/txtProvinceCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tỉnh thành"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spProvince"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:spinnerMode="dropdown">

        </Spinner>


        <TextView
            android:id="@+id/txtIntroduceCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới thiệu"
            android:textSize="20sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilDescriptionCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtDescriptionCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mô tả về công ty" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/txtContactCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người liên hệ"
            android:textSize="20sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập tên người liên  hệ" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điện thoại"
            android:textSize="20sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Nhập số điện thoại của người liên hệ" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Đăng kí"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>