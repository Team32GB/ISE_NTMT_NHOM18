<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="StyleButton" >
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="StyleEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="boxBackgroundColor">@color/colorPrimaryMinLight</item>
    </style>
    <style name="StyleButtonList" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/colorPrimaryDeep</item>
        <item name="android:textColor">@color/colorPrimaryDeep</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">32dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="StyleButtonList1" parent="StyleButtonList" >
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>

    </style>

    <style name="StyleJobIT">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#de1b1b</item>
    </style>
    <style name="Style_txtTK_DD">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="Style_edtTK_DD"  parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_margin">8dp</item>

    </style>
    <style name="Style_btnTimViec">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Style_btnCv">
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>
    <style name="Style_btnTaoCv">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#fa3131</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
    </style>
    <style name="Detailjob_btnSave_btnApply" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="titleCreateCV">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="TitleInAdmin">
        <item name="color">#111</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleInAdmin">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">#d99311</item>
    </style>

    <style name="ButtonStyleAdmin">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#cd2027</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>
